{
  "compilerOptions": {
    // --- Server-Specific Settings ---
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020"],
    "moduleResolution": "node",

    // --- Good Practices ---
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/modules/collaboration/**/*.ts" // Correctly targets only your server
  ],
  "exclude": ["node_modules", ".next", "src/app", "src/components"]
}
